---
const navItems = [
  { label: 'Research', href: '/research' },
  { label: 'Training', href: '/training' },
  { label: 'Partnerships', href: '/partnerships' },
  { label: 'About', href: '/about' },
];

const socialLinks = [
  { 
    label: 'LinkedIn', 
    href: 'https://www.linkedin.com/company/carte-toronto/',
    icon: 'linkedin'
  },
  { 
    label: 'Instagram', 
    href: 'https://www.instagram.com/carte_uoft/',
    icon: 'instagram'
  },
  { 
    label: 'YouTube', 
    href: 'https://www.youtube.com/channel/UC9mYr0Ru6hAeajusllYVC4g',
    icon: 'youtube'
  },
];
---

<header 
  class="sticky top-0 z-50 transition-all duration-300 bg-transparent"
  id="main-header"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-24 items-center">
      <div class="flex items-center">
        <div class="flex-shrink-0 flex items-center">
          <a href="/" class="text-uoft-blue font-bold text-2xl tracking-tighter hover:text-uoft-accent transition-colors group flex flex-col lg:flex-row lg:items-baseline gap-0 overflow-hidden">
            <span class="flex items-baseline">
              <span>CARTE</span>
              <span class="hidden lg:inline-block ml-2 text-base font-medium tracking-normal text-gray-400">|</span>
            </span>
            <span class="lg:ml-2 text-xs lg:text-sm font-medium tracking-normal text-gray-500 group-hover:text-uoft-accent transition-colors">
              Centre for Analytics & AI Engineering
            </span>
          </a>
        </div>
      </div>
      <div class="hidden sm:ml-10 sm:flex sm:items-center sm:space-x-10">
        {navItems.map(item => (
          <a
            href={item.href}
            class="inline-flex items-center text-base font-medium text-gray-600 hover:text-uoft-accent transition-colors relative group"
          >
            {item.label}
            <span class="absolute bottom-0 left-0 w-full h-0.5 bg-uoft-accent transform scale-x-0 group-hover:scale-x-100 transition-transform origin-left"></span>
          </a>
        ))}
        <!-- Social links -->
        <div class="flex items-center gap-3 ml-6">
          {socialLinks.map(social => (
            <a 
              href={social.href} 
              target="_blank" 
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-uoft-accent transition-colors"
              aria-label={social.label}
            >
