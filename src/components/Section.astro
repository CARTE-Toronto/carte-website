---
interface Props {
  title?: string;
  subtitle?: string;
  background?: 'white' | 'gray';
  class?: string;
}

const { title, subtitle, background = 'white', class: className } = Astro.props;

// 'white' now means 'default/transparent' (showing the pale body bg)
// 'gray' now means a slightly darker/warmer section
const bgClass = background === 'gray' ? 'bg-[#F2F0EB]' : '';
---

<section class={`${bgClass} py-12 md:py-20 ${className}`}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    {(title || subtitle) && (
      <div class="text-center mb-12">
        {title && <h2 class="text-3xl font-extrabold text-uoft-blue sm:text-4xl">{title}</h2>}
        {subtitle && <p class="mt-4 max-w-2xl text-xl text-gray-600 mx-auto font-normal">{subtitle}</p>}
      </div>
    )}
    <slot />
  </div>
</section>
